                // 模态框的索引对应
                selectModal: function (n) {
                    this.n = n;
                    let obj = this.guozhi[this.n].name;
                    this.goodsName = obj;
                    this.goods.name = this.goodsName;
                },

                // 实现商品加到购物车
                addToCar: function () {
                    let button = document.querySelector("#addtocar");
                    if (this.goods.suger === undefined || this.goods.temperature === undefined) {
                        this.flag = true;
                    } else {
                        this.flag = false;
                        console.log(this.goods);
                        // 
                        bus.$emit("goods-info", '来自');
                        button.setAttribute('data-dismiss', 'modal');
                    }
                }
            },
            computed: {
                // 计算商品价格
                calculPrice: {
                    get: function () {
                        let totalPrice = 0;
                        switch (this.goodsName) {
                            case '柠檬汁':
                                totalPrice += this.priceList[0].price;
                                break;
                            case '冰缘':
                                totalPrice += this.priceList[1].price;
                                break;
                            case '茉莉绿茶':
                                totalPrice += this.priceList[2].price;
                                break;
                            default:
                                break;
                        }
                        switch (this.goods.size) {
                            case '大杯':
                                totalPrice += this.priceList[3].price;
                                break;
                            case '超大杯':
                                totalPrice += this.priceList[4].price;
                                break;
                            default:
                                break;
                        }
                        for (let i = 0; i < this.goods.other.length; i++) {
                            switch (this.goods.other[i]) {
                                case '燕姿':
                                    totalPrice += this.priceList[5].price;
                                    break;
                                case '咖啡冻':
                                    totalPrice += this.priceList[6].price;
                                    break;
                                case '奶霜':
                                    totalPrice += this.priceList[7].price;
                                    break;
                                case '珍珠':
                                    totalPrice += this.priceList[8].price;
                                    break;
                                case '椰果':
                                    totalPrice += this.priceList[9].price;
                                    break;
                                default:
                                    break;
                            }
                        }
                        this.goods.totalPrice1 = totalPrice;
                        return totalPrice;
                    }
                }
            },
        });

        // 定义路由数组, 每个路由映射一个组件
        const routes = [{
                path: '/shoppingcar',
                component: car,
            },
            {
                path: '/chuncha',
                component: navbarlist1,
            },
            {
                path: '/naicha',
                component: navbarlist2,
            },
            {
                path: '/natie',
                component: navbarlist3,
            },
            {
                path: '/guozhi',
                component: navbarlist4,
            }
        ];

        // 创建router实例，然后传`routes`配置
        const router = new VueRouter({
            routes: routes
        });

        var bus = new Vue();
        // 创建和挂载根实例----将该实例作为中央事件总线用于兄弟组件之间是数据的传递
        // 选商品中的模态框数据传递到购物车模态框中，两个组件为兄弟关系
        const app = new Vue({
            router: router,
            data: {
                phone: '',
                regExp: /^1([38]\d|5[0-35-9]|7[3678])\d{8}$/,
                flag: false,
            },
            methods: {
                // 获得手机号码
                getPhone: function () {
                    let button = document.querySelector("#tijiao");
                    if (!this.regExp.test(this.phone)) {
                        this.flag = true;
                    } else {
                        this.flag = false;
                        button.setAttribute('data-dismiss', 'modal');
                        let cusPhone = this.phone;
                        console.log(cusPhone);
                    }
                },
            },
            computed: {

            }
        }).$mount('#app');

        console.log("hahaha");
