                        },
                        {
                            id: 3,
                            name: '茉莉绿茶',
                            size: '中杯',
                            status: '热卖',
                            price: 100,
                            imageurl: 'image/茉莉绿茶.png',
                        }
                    ]
                }
            },
            template: `
            <div class="row">
            <div class="col-4 border-danger" v-for="(item, index) in chuncha" :key="index">
            <div class="row">
                <div class="col-6">
